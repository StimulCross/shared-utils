{
	"name": "@stimulcross/shared-utils",
	"publishConfig": {
		"access": "public"
	},
	"version": "0.1.0",
	"description": "A set of shared utils for personal use.",
	"repository": "git@github.com:StimulCross/repo-template.git",
	"author": "Stimul Cross <stimulcross@gmail.com>",
	"license": "MIT",
	"main": "lib",
	"module": "es",
	"types": "lib",
	"exports": {
		".": {
			"browser": {
				"require": "./lib/index.js",
				"import": "./es/index.mjs"
			},
			"require": "./lib/index.js",
			"import": "./es/index.mjs",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"lint": "eslint --ext js,ts",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"build": "tsukuru src",
		"rebuild": "tsukuru --clean",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@stimulcross/eslint-config-node": "^1.0.3",
		"@stimulcross/eslint-config-typescript": "^1.0.3",
		"@stimulcross/prettier-config": "^1.0.1",
		"@types/jest": "^28.1.6",
		"@types/node": "^18.7.1",
		"eslint": "^8.21.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"ts-jest": "^28.0.7",
		"tslib": "^2.4.0",
		"tsukuru": "^0.8.0-pre.6",
		"typescript": "4.6.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,css,json,md}": "prettier --write .",
		"*.{js,ts}": "eslint --fix"
	},
	"dependencies": {}
}
